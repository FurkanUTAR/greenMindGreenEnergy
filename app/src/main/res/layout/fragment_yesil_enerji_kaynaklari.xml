<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- ScrollView tüm içeriği kapsayacak -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Project Objectives Öncesi Görsel -->
            <ImageView
                android:id="@+id/objectivesImage"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:scaleType="centerCrop"
                android:layout_margin="8dp"
                android:layout_marginBottom="16dp"
                android:src="@drawable/yesil_enerji_kaynaklari" />

            <TextView
                android:id="@+id/titleTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/yesilEnerjiKaynaklari"
                android:textSize="24sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_margin="8dp"/>

            <!-- İçerik Container -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Alt Başlık -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/yesilEnerjiKaynaklariNedir"
                    android:textSize="16sp"
                    android:textColor="@color/gray"
                    android:layout_marginBottom="16dp"/>

                <!-- Giriş Paragrafları -->
                <TextView
                    android:id="@+id/yesilEnerjiKaynaklariNedirText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="24dp"
                    android:lineSpacingExtra="4dp"
                    android:text="@string/yesilEnerjiKaynaklariNedirText"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginVertical="8dp"
                    android:background="#000000" />

                <!-- Alt Başlık -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/temelYesilEnerjiTurleri"
                    android:textSize="16sp"
                    android:textColor="@color/gray"
                    android:layout_marginBottom="16dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/gunesEnerjisi"
                    android:textSize="15sp"
                    android:textColor="@color/gray"
                    android:layout_marginBottom="16dp"/>

                <!-- Giriş Paragrafları -->
                <TextView
                    android:id="@+id/gunesEnerjisiText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="24dp"
                    android:lineSpacingExtra="4dp"
                    android:text="@string/gunesEnerjisiText"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/ruzgarEnerjisi"
                    android:textSize="15sp"
                    android:textColor="@color/gray"
                    android:layout_marginBottom="16dp"/>

                <!-- Giriş Paragrafları -->
                <TextView
                    android:id="@+id/ruzgarEnerjisiText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="24dp"
                    android:lineSpacingExtra="4dp"
                    android:text="@string/ruzgarEnerjisiText"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/hidroelektrikEnerji"
                    android:textSize="15sp"
                    android:textColor="@color/gray"
                    android:layout_marginBottom="16dp"/>

                <!-- Giriş Paragrafları -->
                <TextView
                    android:id="@+id/hidroelektrikEnerjiText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="24dp"
                    android:lineSpacingExtra="4dp"
                    android:text="@string/hidroelektrikEnerjiText"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/jeotermalEnerji"
                    android:textSize="15sp"
                    android:textColor="@color/gray"
                    android:layout_marginBottom="16dp"/>

                <!-- Giriş Paragrafları -->
                <TextView
                    android:id="@+id/jeotermalEnerjiText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="24dp"
                    android:lineSpacingExtra="4dp"
                    android:text="@string/jeotermalEnerjiText"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/biyokutleEnerjisi"
                    android:textSize="15sp"
                    android:textColor="@color/gray"
                    android:layout_marginBottom="16dp"/>

                <!-- Giriş Paragrafları -->
                <TextView
                    android:id="@+id/biyokutleEnerjisiText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="24dp"
                    android:lineSpacingExtra="4dp"
                    android:text="@string/biyokutleEnerjisiText"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginVertical="8dp"
                    android:background="#000000" />

                <!-- Alt Başlık -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/yesilEnerjininAvantajlari"
                    android:textSize="16sp"
                    android:textColor="@color/gray"
                    android:layout_marginBottom="16dp"/>

                <!-- Giriş Paragrafları -->
                <TextView
                    android:id="@+id/yesilEnerjininAvantajlariText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="24dp"
                    android:lineSpacingExtra="4dp"
                    android:text="@string/yesilEnerjininAvantajlariText"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginVertical="8dp"
                    android:background="#000000" />

                <!-- Alt Başlık -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/sonuc4"
                    android:textSize="16sp"
                    android:textColor="@color/gray"
                    android:layout_marginBottom="16dp"/>

                <!-- Giriş Paragrafları -->
                <TextView
                    android:id="@+id/sonuc4Text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="24dp"
                    android:lineSpacingExtra="4dp"
                    android:text="@string/sonuc4Text"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Loading Indicator (hala sabit) -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>