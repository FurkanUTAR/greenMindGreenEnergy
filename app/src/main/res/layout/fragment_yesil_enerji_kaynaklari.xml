<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green_50"> <com.google.android.material.appbar.MaterialToolbar
    android:id="@+id/toolbar_green_energy_sources"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@color/accent_yellow" app:titleTextColor="@color/black" app:layout_constraintTop_toTopOf="parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/yesilEnerjiKaynaklari"
        android:textColor="@color/black" android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginStart="8dp"/>
</com.google.android.material.appbar.MaterialToolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/toolbar_green_energy_sources"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="24dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/objectivesImage"
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/yesil_enerji_kaynaklari"
                        android:contentDescription="Yeşil Enerji Kaynakları Görseli"
                        app:cardCornerRadius="8dp"/> <TextView
                    android:id="@+id/titleTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/yesilEnerjiKaynaklari"
                    android:textSize="24sp"
                    android:textColor="@color/accent_yellow" android:textStyle="bold"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/yesilEnerjiKaynaklariNedir"
                        android:textSize="18sp"
                        android:textColor="@color/accent_yellow" android:textStyle="bold"
                        android:layout_marginBottom="12dp"/>

                    <TextView
                        android:id="@+id/yesilEnerjiKaynaklariNedirText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="@color/gray_700" android:layout_marginBottom="16dp"
                        android:lineSpacingExtra="6dp"
                        android:text="@string/yesilEnerjiKaynaklariNedirText"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp" android:layout_marginVertical="12dp"
                        android:background="@color/gray_300" /> <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/temelYesilEnerjiTurleri"
                    android:textSize="18sp"
                    android:textColor="@color/accent_yellow" android:textStyle="bold"
                    android:layout_marginBottom="12dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/gunesEnerjisi"
                        android:textSize="16sp" android:textColor="@color/accent_yellow" android:textStyle="bold" android:layout_marginBottom="8dp"/> <TextView
                    android:id="@+id/gunesEnerjisiText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/gray_700" android:layout_marginBottom="16dp"
                    android:lineSpacingExtra="6dp"
                    android:text="@string/gunesEnerjisiText"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/ruzgarEnerjisi"
                        android:textSize="16sp" android:textColor="@color/accent_yellow" android:textStyle="bold" android:layout_marginBottom="8dp"/> <TextView
                    android:id="@+id/ruzgarEnerjisiText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/gray_700" android:layout_marginBottom="16dp"
                    android:lineSpacingExtra="6dp"
                    android:text="@string/ruzgarEnerjisiText"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/hidroelektrikEnerji"
                        android:textSize="16sp" android:textColor="@color/accent_yellow" android:textStyle="bold" android:layout_marginBottom="8dp"/> <TextView
                    android:id="@+id/hidroelektrikEnerjiText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/gray_700" android:layout_marginBottom="16dp"
                    android:lineSpacingExtra="6dp"
                    android:text="@string/hidroelektrikEnerjiText"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/jeotermalEnerji"
                        android:textSize="16sp" android:textColor="@color/accent_yellow" android:textStyle="bold" android:layout_marginBottom="8dp"/> <TextView
                    android:id="@+id/jeotermalEnerjiText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/gray_700" android:layout_marginBottom="16dp"
                    android:lineSpacingExtra="6dp"
                    android:text="@string/jeotermalEnerjiText"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/biyokutleEnerjisi"
                        android:textSize="16sp" android:textColor="@color/accent_yellow" android:textStyle="bold" android:layout_marginBottom="8dp"/> <TextView
                    android:id="@+id/biyokutleEnerjisiText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/gray_700" android:layout_marginBottom="16dp"
                    android:lineSpacingExtra="6dp"
                    android:text="@string/biyokutleEnerjisiText"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginVertical="12dp"
                        android:background="@color/gray_300" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/yesilEnerjininAvantajlari"
                        android:textSize="18sp"
                        android:textColor="@color/accent_yellow" android:textStyle="bold"
                        android:layout_marginBottom="12dp"/>

                    <TextView
                        android:id="@+id/yesilEnerjininAvantajlariText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="@color/gray_700" android:layout_marginBottom="16dp"
                        android:lineSpacingExtra="6dp"
                        android:text="@string/yesilEnerjininAvantajlariText"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginVertical="12dp"
                        android:background="@color/gray_300" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/sonuc4"
                        android:textSize="18sp"
                        android:textColor="@color/accent_yellow" android:textStyle="bold"
                        android:layout_marginBottom="12dp"/>

                    <TextView
                        android:id="@+id/sonuc4Text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="@color/gray_700" android:layout_marginBottom="16dp"
                        android:lineSpacingExtra="6dp"
                        android:text="@string/sonuc4Text"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/progressBar"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:indeterminate="true"
        android:visibility="gone"
        app:indicatorColor="@color/accent_yellow" app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>