<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_50"> <com.google.android.material.appbar.MaterialToolbar
    android:id="@+id/toolbar_robotics"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@color/accent_blue" app:titleTextColor="@color/white" app:layout_constraintTop_toTopOf="parent">

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_robot" android:layout_marginStart="8dp"
        app:tint="@color/white" android:contentDescription="Robotics Icon" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/robotikVeKodlama"
        android:textColor="@color/white" android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginStart="8dp"/>
</com.google.android.material.appbar.MaterialToolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/toolbar_robotics"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="24dp">

            <TextView
                android:id="@+id/titleTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/robotikVeKodlama"
                android:textSize="24sp"
                android:textColor="@color/accent_blue" android:textStyle="bold"
                android:gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/objectivesImage"
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:scaleType="centerCrop"
                        android:layout_marginBottom="16dp"
                        android:src="@drawable/robotik_ve_kodlama"
                        android:contentDescription="Robotik ve Kodlama GÃ¶rseli"
                        app:cardCornerRadius="8dp"/> <TextView
                    android:id="@+id/robotikVeKodlamaText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/gray_700"
                    android:layout_marginBottom="24dp"
                    android:lineSpacingExtra="6dp"
                    android:text="@string/robotikVeKodlamaText"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/makalelerimiz"
                        android:textSize="18sp"
                        android:textColor="@color/accent_blue" android:textStyle="bold"
                        android:layout_marginBottom="12dp"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/robotikKodlamayaGirisButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/robotikKodlamayaGiris"
                        android:layout_marginBottom="8dp"
                        app:cornerRadius="8dp"
                        android:textColor="@color/white"
                        app:backgroundTint="@color/accent_blue" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/mikrodenetleyiciyeGirisButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/mikrodenetleyiciyeGiris"
                        android:layout_marginBottom="8dp"
                        app:cornerRadius="8dp"
                        android:textColor="@color/white"
                        app:backgroundTint="@color/accent_blue" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/elektronikBilesenlerVeSensorlerButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/elektronikBilesenlerVeSensorler"
                        android:layout_marginBottom="8dp"
                        app:cornerRadius="8dp"
                        android:textColor="@color/white"
                        app:backgroundTint="@color/accent_blue" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/arduinoIleKodlamaButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/arduinoIleKodlama"
                        android:layout_marginBottom="8dp"
                        app:cornerRadius="8dp"
                        android:textColor="@color/white"
                        app:backgroundTint="@color/accent_blue" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/motorKontrolSistemleriButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/motorKontrolSistemleri"
                        android:layout_marginBottom="8dp"
                        app:cornerRadius="8dp"
                        android:textColor="@color/white"
                        app:backgroundTint="@color/accent_blue" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/sensorEntegrasyonuButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/sensorEntegrasyonu"
                        android:layout_marginBottom="8dp"
                        app:cornerRadius="8dp"
                        android:textColor="@color/white"
                        app:backgroundTint="@color/accent_blue" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/algoritmaGelistirmeButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/algoritmaGelistirme"
                        android:layout_marginBottom="8dp"
                        app:cornerRadius="8dp"
                        android:textColor="@color/white"
                        app:backgroundTint="@color/accent_blue" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/mobilRobotikSistemlerButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/mobilRobotikSistemler"
                        android:layout_marginBottom="8dp"
                        app:cornerRadius="8dp"
                        android:textColor="@color/white"
                        app:backgroundTint="@color/accent_blue" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/otonomAraclarIcinAlgoritmalarButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/otonomAraclarIcinAlgoritmalar"
                        android:layout_marginBottom="8dp"
                        app:cornerRadius="8dp"
                        android:textColor="@color/white"
                        app:backgroundTint="@color/accent_blue" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/veriToplamaVeAnaliziButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/veriToplamaVeAnalizi"
                        android:layout_marginBottom="8dp"
                        app:cornerRadius="8dp"
                        android:textColor="@color/white"
                        app:backgroundTint="@color/accent_blue" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/yapayZekaTabanliRobotikButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/yapayZekaTabanliRobotik"
                        android:layout_marginBottom="8dp"
                        app:cornerRadius="8dp"
                        android:textColor="@color/white"
                        app:backgroundTint="@color/accent_blue" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/endustriyelRobotikUygulamalariButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/endustriyelRobotikUygulamalari"
                        android:layout_marginBottom="8dp"
                        app:cornerRadius="8dp"
                        android:textColor="@color/white"
                        app:backgroundTint="@color/accent_blue" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/rosIleCalismaButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/rosIleCalisma"
                        android:layout_marginBottom="8dp"
                        app:cornerRadius="8dp"
                        android:textColor="@color/white"
                        app:backgroundTint="@color/accent_blue" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/goruntuIslemeveRobotikButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/goruntuIslemeveRobotik"
                        android:layout_marginBottom="8dp"
                        app:cornerRadius="8dp"
                        android:textColor="@color/white"
                        app:backgroundTint="@color/accent_blue" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/robotikSistemlerinOptimizasyonuButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/robotikSistemlerinOptimizasyonu"
                        android:layout_marginBottom="8dp"
                        app:cornerRadius="8dp"
                        android:textColor="@color/white"
                        app:backgroundTint="@color/accent_blue" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/robotikKollarinTasarimiVeKontroluButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/robotikKollarinTasarimiVeKontrolu"
                        android:layout_marginBottom="8dp"
                        app:cornerRadius="8dp"
                        android:textColor="@color/white"
                        app:backgroundTint="@color/accent_blue" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/robotlarIcinIoTEntegrasyonuButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/robotlarIcinIoTEntegrasyonu"
                        android:layout_marginBottom="8dp"
                        app:cornerRadius="8dp"
                        android:textColor="@color/white"
                        app:backgroundTint="@color/accent_blue" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/suruHalindeCalisanRobotikSistemlerButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/suruHalindeCalisanRobotikSistemler"
                        android:layout_marginBottom="8dp"
                        app:cornerRadius="8dp"
                        android:textColor="@color/white"
                        app:backgroundTint="@color/accent_blue" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/hibritRobotikSistemlerButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/hibritRobotikSistemler"
                        android:layout_marginBottom="8dp"
                        app:cornerRadius="8dp"
                        android:textColor="@color/white"
                        app:backgroundTint="@color/accent_blue" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/geleceginRobotikTeknolojileriButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/geleceginRobotikTeknolojileri"
                        android:layout_marginBottom="8dp"
                        app:cornerRadius="8dp"
                        android:textColor="@color/white"
                        app:backgroundTint="@color/accent_blue" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/progressBar"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:indeterminate="true"
        android:visibility="gone"
        app:indicatorColor="@color/accent_blue" app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>