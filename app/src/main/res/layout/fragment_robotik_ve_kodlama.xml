<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- ScrollView tüm içeriği kapsayacak -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/titleTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/robotikVeKodlama"
                android:textSize="24sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_margin="8dp"/>

            <!-- İçerik Container -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Project Objectives Öncesi Görsel -->
                <ImageView
                    android:id="@+id/objectivesImage"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:scaleType="centerCrop"
                    android:layout_marginBottom="16dp"
                    android:src="@drawable/robotik_ve_kodlama"
                    android:contentDescription="@string/yesilZihinlerYesilEnerji" />

                <!-- Giriş Paragrafları -->
                <TextView
                    android:id="@+id/robotikVeKodlamaText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="24dp"
                    android:lineSpacingExtra="4dp"
                    android:text="@string/robotikVeKodlamaText"/>

                <!-- Alt Başlık -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/makalelerimiz"
                    android:textSize="16sp"
                    android:textColor="@color/gray"
                    android:layout_marginBottom="16dp"/>

                <Button
                    android:id="@+id/robotikKodlamayaGirisButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/robotikKodlamayaGiris" />

                <Button
                    android:id="@+id/mikrodenetleyiciyeGirisButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/mikrodenetleyiciyeGiris" />

                <Button
                    android:id="@+id/elektronikBilesenlerVeSensorlerButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/elektronikBilesenlerVeSensorler" />

                <Button
                    android:id="@+id/arduinoIleKodlamaButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/arduinoIleKodlama" />

                <Button
                    android:id="@+id/motorKontrolSistemleriButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/motorKontrolSistemleri" />

                <Button
                    android:id="@+id/sensorEntegrasyonuButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/sensorEntegrasyonu" />

                <Button
                    android:id="@+id/algoritmaGelistirmeButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/algoritmaGelistirme" />

                <Button
                    android:id="@+id/mobilRobotikSistemlerButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/mobilRobotikSistemler" />

                <Button
                    android:id="@+id/otonomAraclarIcinAlgoritmalarButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/otonomAraclarIcinAlgoritmalar" />

                <Button
                    android:id="@+id/veriToplamaVeAnaliziButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/veriToplamaVeAnalizi" />

                <Button
                    android:id="@+id/yapayZekaTabanliRobotikButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/yapayZekaTabanliRobotik" />

                <Button
                    android:id="@+id/endustriyelRobotikUygulamalariButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/endustriyelRobotikUygulamalari" />

                <Button
                    android:id="@+id/rosIleCalismaButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/rosIleCalisma" />

                <Button
                    android:id="@+id/goruntuIslemeveRobotikButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/goruntuIslemeveRobotik" />

                <Button
                    android:id="@+id/robotikSistemlerinOptimizasyonuButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/robotikSistemlerinOptimizasyonu" />

                <Button
                    android:id="@+id/robotikKollarinTasarimiVeKontroluButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/robotikKollarinTasarimiVeKontrolu" />

                <Button
                    android:id="@+id/robotlarIcinIoTEntegrasyonuButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/robotlarIcinIoTEntegrasyonu" />

                <Button
                    android:id="@+id/suruHalindeCalisanRobotikSistemlerButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/suruHalindeCalisanRobotikSistemler" />

                <Button
                    android:id="@+id/hibritRobotikSistemlerButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/hibritRobotikSistemler" />

                <Button
                    android:id="@+id/geleceginRobotikTeknolojileriButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/geleceginRobotikTeknolojileri" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Loading Indicator (hala sabit) -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>