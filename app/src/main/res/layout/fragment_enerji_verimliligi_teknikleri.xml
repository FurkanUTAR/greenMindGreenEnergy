<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green_50"> <com.google.android.material.appbar.MaterialToolbar
    android:id="@+id/toolbar_energy_efficiency"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@color/accent_yellow" app:titleTextColor="@color/black" app:layout_constraintTop_toTopOf="parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/enerjiVerimliligiTeknikleri"
        android:textColor="@color/black" android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginStart="8dp"/>
</com.google.android.material.appbar.MaterialToolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/toolbar_energy_efficiency"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="24dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/objectivesImage"
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/enerji_verimliligi_teknikleri"
                        android:contentDescription="Enerji Verimliliği Teknikleri Görseli"
                        app:cardCornerRadius="8dp"/> <TextView
                    android:id="@+id/titleTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/enerjiVerimliligiTeknikleri"
                    android:textSize="24sp"
                    android:textColor="@color/accent_yellow" android:textStyle="bold"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/enerjiVerimliligiNedir"
                        android:textSize="18sp"
                        android:textColor="@color/accent_yellow" android:textStyle="bold"
                        android:layout_marginBottom="12dp"/>

                    <TextView
                        android:id="@+id/enerjiVerimliligiTeknikleriText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="@color/gray_700" android:layout_marginBottom="16dp"
                        android:lineSpacingExtra="6dp"
                        android:text="@string/enerjiVerimliligiNedirText"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp" android:layout_marginVertical="12dp"
                        android:background="@color/gray_300" /> <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/nedenEnerjiVerimliligiOnemlidir"
                    android:textSize="18sp"
                    android:textColor="@color/accent_yellow" android:textStyle="bold"
                    android:layout_marginBottom="12dp"/>

                    <TextView
                        android:id="@+id/nedenEnerjiVerimliligiOnemlidirText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="@color/gray_700" android:layout_marginBottom="16dp"
                        android:lineSpacingExtra="6dp"
                        android:text="@string/nedenEnerjiVerimliligiOnemlidirText"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginVertical="12dp"
                        android:background="@color/gray_300" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/yayginEnerjiVerimliligiTeknikleri"
                        android:textSize="18sp"
                        android:textColor="@color/accent_yellow" android:textStyle="bold"
                        android:layout_marginBottom="12dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/binalarVeAltyapi"
                        android:textSize="16sp" android:textColor="@color/accent_yellow" android:textStyle="bold" android:layout_marginBottom="8dp"/> <TextView
                    android:id="@+id/binalarVeAltyapiText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/gray_700" android:layout_marginBottom="16dp"
                    android:lineSpacingExtra="6dp"
                    android:text="@string/binalarVeAltyapiText"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/cihazlarVeDonanimlar"
                        android:textSize="16sp" android:textColor="@color/accent_yellow" android:textStyle="bold" android:layout_marginBottom="8dp"/> <TextView
                    android:id="@+id/cihazlarVeDonanimlarText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/gray_700" android:layout_marginBottom="16dp"
                    android:lineSpacingExtra="6dp"
                    android:text="@string/cihazlarVeDonanimlarText"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/sanayiVeUretim"
                        android:textSize="16sp" android:textColor="@color/accent_yellow" android:textStyle="bold" android:layout_marginBottom="8dp"/> <TextView
                    android:id="@+id/sanayiVeUretimText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/gray_700" android:layout_marginBottom="16dp"
                    android:lineSpacingExtra="6dp"
                    android:text="@string/sanayiVeUretimText"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/ulasim"
                        android:textSize="16sp" android:textColor="@color/accent_yellow" android:textStyle="bold" android:layout_marginBottom="8dp"/> <TextView
                    android:id="@+id/ulasimText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/gray_700" android:layout_marginBottom="16dp"
                    android:lineSpacingExtra="6dp"
                    android:text="@string/ulasimText"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/dijitalVeIoTCozumleri"
                        android:textSize="16sp" android:textColor="@color/accent_yellow" android:textStyle="bold" android:layout_marginBottom="8dp"/> <TextView
                    android:id="@+id/dijitalVeIoTCozumleriText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/gray_700" android:layout_marginBottom="16dp"
                    android:lineSpacingExtra="6dp"
                    android:text="@string/dijitalVeIoTCozumleriText"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginVertical="12dp"
                        android:background="@color/gray_300" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/kureselVeUlusalStratejiler"
                        android:textSize="18sp"
                        android:textColor="@color/accent_yellow" android:textStyle="bold"
                        android:layout_marginBottom="12dp"/>

                    <TextView
                        android:id="@+id/kureselVeUlusalStratejilerText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="@color/gray_700" android:layout_marginBottom="16dp"
                        android:lineSpacingExtra="6dp"
                        android:text="@string/kureselVeUlusalStratejilerText"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginVertical="12dp"
                        android:background="@color/gray_300" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/sonuc5"
                        android:textSize="18sp"
                        android:textColor="@color/accent_yellow" android:textStyle="bold"
                        android:layout_marginBottom="12dp"/>

                    <TextView
                        android:id="@+id/sonuc5Text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="@color/gray_700" android:layout_marginBottom="16dp"
                        android:lineSpacingExtra="6dp"
                        android:text="@string/sonuc5Text2"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/progressBar"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:indeterminate="true"
        android:visibility="gone"
        app:indicatorColor="@color/accent_yellow" app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>