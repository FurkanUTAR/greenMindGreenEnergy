<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- ScrollView tüm içeriği kapsayacak -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/titleTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/projeHakkinda"
                android:textSize="24sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_margin="8dp"/>

            <!-- İçerik Container -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Giriş Paragrafları -->
                <TextView
                    android:id="@+id/projeTanitimText1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="24dp"
                    android:lineSpacingExtra="4dp"
                    android:text="@string/projeTanitimText1"/>

                <TextView
                    android:id="@+id/projeTanitimText2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="24dp"
                    android:lineSpacingExtra="4dp"
                    android:text="@string/projeTanitimText2"/>

                <!-- Alt Başlık -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/projeAmaci"
                    android:textSize="16sp"
                    android:textColor="@color/gray"
                    android:layout_marginBottom="16dp"/>

                <!-- Giriş Paragrafları -->
                <TextView
                    android:id="@+id/projeAmaciText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="24dp"
                    android:lineSpacingExtra="4dp"
                    android:text="@string/projeAmaciText"/>

                <!-- Alt Başlık -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/projeAsamalari"
                    android:textSize="16sp"
                    android:textColor="@color/gray"
                    android:layout_marginBottom="16dp"/>

                <!-- Giriş Paragrafları -->
                <TextView
                    android:id="@+id/projeAsamalariText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="24dp"
                    android:lineSpacingExtra="4dp"
                    android:text="@string/projeAsamalariText"/>

                <!-- Alt Başlık -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/projeKazanimlari"
                    android:textSize="16sp"
                    android:textColor="@color/gray"
                    android:layout_marginBottom="16dp"/>

                <!-- Giriş Paragrafları -->
                <TextView
                    android:id="@+id/projeKazanimlariText1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="24dp"
                    android:lineSpacingExtra="4dp"
                    android:text="@string/projeKazanimlariText1"/>

                <TextView
                    android:id="@+id/projeKazanimlariText2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="24dp"
                    android:lineSpacingExtra="4dp"
                    android:text="@string/projeKazanimlariText2"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Loading Indicator (hala sabit) -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>