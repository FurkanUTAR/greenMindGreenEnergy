<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_50"> <com.google.android.material.appbar.MaterialToolbar
    android:id="@+id/toolbar_electronics"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@color/accent_blue" app:titleTextColor="@color/white" app:layout_constraintTop_toTopOf="parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/elektronikBilesenlerVeSensorler"
        android:textColor="@color/white" android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginStart="8dp"/>
</com.google.android.material.appbar.MaterialToolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/toolbar_electronics"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="24dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/objectivesImage"
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/elektronik_bilesenler_ve_sensorler"
                        android:contentDescription="Elektronik Bileşenler ve Sensörler Görseli"
                        app:cardCornerRadius="8dp"/> <TextView
                    android:id="@+id/titleTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/elektronikBilesenlerVeSensorler"
                    android:textSize="24sp"
                    android:textColor="@color/accent_blue" android:textStyle="bold"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/elektronikGiris"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/accent_blue" android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/elektronikGirisText"
                        android:textSize="14sp"
                        android:textColor="@color/gray_700" android:layout_marginBottom="16dp"
                        android:lineSpacingExtra="6dp"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp" android:layout_marginVertical="12dp"
                        android:background="@color/gray_300" /> <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/temelBilesenler"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/accent_blue" android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/direncler"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/accent_blue" android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/direnclerText"
                        android:textSize="14sp"
                        android:textColor="@color/gray_700" android:layout_marginBottom="16dp"
                        android:lineSpacingExtra="6dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/kapasitorler"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/accent_blue" android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/kapasitorlerText"
                        android:textSize="14sp"
                        android:textColor="@color/gray_700" android:layout_marginBottom="16dp"
                        android:lineSpacingExtra="6dp"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginVertical="12dp"
                        android:background="@color/gray_300" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/sensorlereGiris"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/accent_blue" android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/sensorTurleri"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/accent_blue" android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/sensorTurleriText"
                        android:textSize="14sp"
                        android:textColor="@color/gray_700" android:layout_marginBottom="16dp"
                        android:lineSpacingExtra="6dp"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginVertical="12dp"
                        android:background="@color/gray_300" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/ultrasonikSensorOrnek"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/accent_blue" android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/devreKurulumu"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/accent_blue" android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/devreKurulumuText"
                        android:textSize="14sp"
                        android:textColor="@color/gray_700" android:layout_marginBottom="16dp"
                        android:lineSpacingExtra="6dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/ornekKod"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/accent_blue" android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/ornekKodText"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:typeface="monospace"
                        android:background="@color/gray_100" android:padding="12dp"
                        android:layout_marginBottom="16dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginVertical="12dp"
                        android:background="@color/gray_300" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/sonuc"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/accent_blue" android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/sonucText20"
                        android:textSize="14sp"
                        android:textColor="@color/gray_700" android:layout_marginBottom="16dp"
                        android:lineSpacingExtra="6dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:visibility="gone"
        app:indicatorColor="@color/accent_blue" app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>